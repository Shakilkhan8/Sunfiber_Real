<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="carpet_delivery_report">
            <t t-call="web.html_container">
                <t t-call="carpet_delivery_report.packing_list_report_id"/>
                <t t-call="web.basic_layout">
                    <div class="page" style="margin-top:0px">
                        <div class="row">
                            <div class="col-4">
                                <span style="margin-left:-13px"><b>Invoice No#:</b> <t t-esc="number"/>  </span>
                            </div>
                        </div>
                        <div class="row mt-1">

                                <table style="border:1px solid gray">
                                    <thead style="border:1px solid gray">
                                        <th width="5%" style="border:1px solid gray" class="text-center">SR.</th>
                                        <th width="30%" style="border:1px solid gray" class="text-center">Product</th>
                                        <th width="30%" style="border:1px solid gray" class="text-center">Design</th>
                                        <th width="5%" style="border:1px solid gray" class="text-center">Quality</th>
                                        <th width="5%" style="border:1px solid gray" class="text-center">Color</th>
                                        <th width="10%" style="border:1px solid gray" class="text-center">Length</th>
                                        <th width="10%" style="border:1px solid gray" class="text-center">Width</th>
                                        <th width="5%" style="border:1px solid gray" class="text-center">Grade</th>
                                    </thead>
                                    <tbody>
                                        <t t-set="total_roll" t-value="0"/>
                                        <t t-set="ser" t-value="0"/>

                                        <t t-foreach="record1" t-as="p">

                                            <t t-set="ser" t-value="ser+1"/>
                                            <t t-set="total_roll" t-value="total_roll+1"/>
                                            <tr>
                                                <td width="5%" height="30" style="border:1px solid gray" class="text-center">
                                                    <t t-esc="ser"/>
                                                </td>
                                                <td width="30%" height="30" style="border:1px solid gray" class="text-center">
                                                    <t t-esc="p['design_name']"/>
                                                </td>
                                                <td width="30%" height="30" style="border:1px solid gray" class="text-center">
                                                    <t t-esc="p['child_design']"/>
                                                </td>
                                                <td width="5%" height="30" style="border:1px solid gray" class="text-center">
                                                    <t t-esc="p['quality_name']"/>
                                                </td>
                                                <td width="5%" style="border:1px solid gray" class="text-center">
                                                    <t t-esc="p['color']"/>
                                                </td>
                                                <td width="5%" height="30" style="border:1px solid gray" class="text-center"><t t-esc="p['length']"/> </td>
                                                <td width="5%" height="30" style="border:1px solid gray" class="text-center"><t t-esc="p['width']"/></td>
                                                <td width="5%" height="30" style="border:1px solid gray" class="text-center"><t t-esc="p['grade']"/></td>
                                            </tr>

                                        </t>
                                        <tr>
                                            <td style="border:1px solid gray" colspan="2"><b>Total Rolls: <t t-esc="total_roll"/> </b></td>
                                            <td style="border:1px solid gray" colspan="" class="text-center"></td>
                                            <td style="border:1px solid gray" colspan="" class="text-center"></td>
                                            <td style="border:1px solid gray" colspan="" class="text-center"></td>
                                            <td style="border:1px solid gray" ><b>Total Length:</b></td>
                                            <td style="border:1px solid gray" colspan="2"><b>Total Width:</b></td>

                                        </tr>

                                    </tbody>

                                </table>

                            </div>
                        <div class="row mt-3">
                            <div class="col-4">
                                <span><b>Signature ________________</b></span>
                            </div>
                        </div>
                    </div>

                </t>









